Project Pascal_Triangle is
    for Main use ("pascal_triangle");
    for Object_Dir use "obj";
    for Exec_Dir use ".";

    package Builder is
        for Executable_Suffix use ".out";
    end Builder;

    package Compiler is
        for Switches ("Ada") use ("-Wall", "-Wextra", "-Wpedantic", "-ggdb3");
    end Compiler;
end Pascal_Triangle;
